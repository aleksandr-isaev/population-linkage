{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "validate",
            "type": "shell",
            "command": "mvn -B validate",
            "group": "build"
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "mvn -B compile",
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "mvn -B clean",
            "group": "build"
        },
        {
            "label": "verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build"
        },
        {
            "label": "install",
            "type": "shell",
            "command": "mvn -B clean install",
            "group": "build"
        },
        {
            "label": "deploy",
            "type": "shell",
            "command": "mvn -B clean deploy",
            "group": "build"
        }
    ]
}